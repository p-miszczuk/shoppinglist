<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
   android:background="#000000"
  
    tools:context=".Main" >
 
    <ListView
        android:id="@+id/Lista"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/deleteall"
        android:layout_marginTop="50dp" 

     	
     	
        >
 
    </ListView>

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="15sp"
        android:layout_marginLeft="5sp"
        android:layout_marginStart="5sp"
        android:layout_toEndOf="@+id/editText1"
        android:layout_toRightOf="@+id/editText1"
        android:background="@layout/button"
        android:onClick="wprowadzDane"
        android:text="@string/Add"
        android:textStyle="bold"
        android:minWidth="100sp"
        android:width="130sp" />

    <EditText
        android:id="@+id/editText1"
        android:inputType="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add"
        android:layout_marginLeft="5sp"
        android:layout_marginStart="5sp"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:background="@layout/edittext"
        android:ems="10" 
        android:hint="@string/extratext"
        android:gravity="center"
       
        />

    <Button
        android:id="@+id/deleteall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5sp"
        android:background="@layout/button"
        android:longClickable="true"
        android:maxWidth="250sp"
        android:minWidth="150sp"
        android:onClick="usunWszystko"
        android:text="@string/delete"
        android:width="200sp" 
        android:textStyle="bold"
        />

</RelativeLayout>
